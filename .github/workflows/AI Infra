name: AI Infra 早报

on:
  schedule:
    - cron: '0 0 * * *'  # UTC 0:00 = 北京 8:00
  workflow_dispatch:  # 手动触发

jobs:
  report:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.12'
      - name: Install dependencies
        run: pip install feedparser
      - name: Run report
        run: python main.py
